<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" android:drawable="@drawable/speaker_1" >
        <shape android:shape="rectangle" android:drawable="@drawable/shuffle_1" >

            <gradient android:angle="-90" android:startColor="#e0f7fa" android:endColor="#e0f7fa"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle"  >
            <gradient android:angle="-90" android:startColor="@color/colorPrimaryDark" android:endColor="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:drawable="@drawable/speaker">
        <shape android:shape="rectangle"  >

            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white" />
        </shape>
    </item>
</selector>