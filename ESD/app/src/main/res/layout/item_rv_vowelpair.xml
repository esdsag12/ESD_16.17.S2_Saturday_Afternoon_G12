<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardv1_vowelpair"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="3.5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardElevation="3.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="64dp"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:paddingTop="32dp">

        <TextView
            android:id="@+id/txtv_vowel1_itemrv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/coloritemrvVowel"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtv_wordpair1_itemrv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/coloritemrvWord" />

    </LinearLayout>
</android.support.v7.widget.CardView>